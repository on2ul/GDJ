package ex02_casting;

public class ex01 {

	public static void main(String[] args) {
		
		// 자동 형 변환
		// promotion 이라고 한다.
		// 다른 데이터타입으로 변환하는 것을 말한다.
		// 작은 크기의 데이터압이 큰 크기의 데이터타입으로 변환될 때 자동으로 진행된다.
		
		long money = 10000;  //4바이트에 저장된 10000이 8바이트로 promotion된다.
		System.out.println(money);
		
		
	}

}
